<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lemontree0802.mapper.MerchantMapper">
    <resultMap id="merchantMap" type="com.lemontree0802.pojo.Merchant">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="address" property="address" />
        <result column="main_dish" property="mainDish" />
    </resultMap>
    <select id="selectAll" resultMap="merchantMap">
        SELECT *
        FROM merchants;
    </select>
    <select id="selectByName" resultMap="merchantMap">
        SELECT *
        FROM merchants
        WHERE name = #{name};
    </select>
    <select id="fuzzySearch" resultMap="merchantMap">
        SELECT *
        FROM merchants
        WHERE name like #{name};
    </select>
</mapper>
